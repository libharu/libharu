PROGRAMS = \
	demo\encoding_list.exe \
	demo\font_demo.exe \
	demo\text_demo.exe \
	demo\text_demo2.exe \
	demo\image_demo.exe \
	demo\jpeg_demo.exe \
	demo\jpfont_demo.exe \
	demo\line_demo.exe \
	demo\link_annotation.exe \
	demo\outline_demo.exe \
	demo\png_demo.exe \
	demo\text_annotation.exe \
	demo\ttfont_demo.exe \
	demo\character_map.exe \
